{
  "name": "@livreur/ws-client",
  "version": "0.1.0",
  "description": "Client WebSocket pour la plateforme de suivi de livreurs en temps réel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "websocket",
    "realtime",
    "tracking",
    "livreur",
    "delivery"
  ],
  "author": "Équipe Livreur",
  "license": "MIT",
  "dependencies": {
    "@livreur/core-types": "workspace:^0.1.0",
    "reconnecting-websocket": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/reconnecting-websocket": "^4.4.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.7.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "ws": "^8.0.0"
  },
  "peerDependencies": {
    "ws": "^8.0.0"
  }
}
