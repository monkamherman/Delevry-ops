{
  "name": "livreur-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "start:api-gateway": "cd services/api-gateway && bun run start",
    "dev:api-gateway": "cd services/api-gateway && bun run dev",
    "build:api-gateway": "cd services/api-gateway && bun run build",
    "test:api-gateway": "cd services/api-gateway && bun run test",
    "start:web-client": "cd apps/web-client && bun run dev",
    "build:web-client": "cd apps/web-client && bun run build",
    "test:web-client": "cd apps/web-client && bun run test",
    "docs:generate": "cd packages/core-types && bun run docs",
    "docs:serve": "cd packages/core-types && npx serve docs -p 8080"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  }
}
