{
  "name": "livreur-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "start:api-gateway": "cd services/api-gateway && bun run start",
    "dev:api-gateway": "cd services/api-gateway && bun run dev",
    "build:api-gateway": "cd services/api-gateway && bun run build",
    "test:api-gateway": "cd services/api-gateway && bun run test",
    "start:web-client": "cd apps/web-client && bun run dev",
    "build:web-client": "cd apps/web-client && bun run build",
    "test:web-client": "cd apps/web-client && bun run test",
    "docs:generate": "cd packages/core-types && bun run docs",
    "docs:serve": "cd packages/core-types && npx serve docs -p 8080",
    "bootstrap": "bun install && cd packages/map-components && bun install"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "reconnecting-websocket": "^4.4.0",
    "@types/websocket": "^1.0.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-webpack5": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@types/jest": "^30.0.0",
    "@types/leaflet": "^1.9.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "jest": "^30.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "storybook": "^7.5.3",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "styled-components": "^6.1.8"
  },
  "resolutions": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  }
}
