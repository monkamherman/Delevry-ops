# Configuration de l'application
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Base de données
MONGODB_URI=mongodb://user:password@localhost:27017/livreur-platform?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379

# Sécurité
JWT_SECRET=votre_clé_secrète_très_longue_et_sécurisée
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS (séparer les origines par des virgules)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Configuration du taux de requêtes
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Nombre maximum de requêtes par fenêtre

# Configuration du cache
CACHE_TTL=300  # 5 minutes

# Configuration des e-mails (optionnel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=votre_mot_de_passe
SMTP_FROM=noreply@example.com

# Configuration du stockage (optionnel)
STORAGE_PROVIDER=local  # ou 's3', 'gcs', etc.
STORAGE_PATH=./uploads

# Configuration S3 (si STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=votre_access_key_id
AWS_SECRET_ACCESS_KEY=votre_secret_access_key
AWS_REGION=eu-west-1
S3_BUCKET=your-bucket-name

# Configuration Google Cloud Storage (si STORAGE_PROVIDER=gcs)
GCLOUD_PROJECT_ID=votre-projet-id
GCLOUD_BUCKET_NAME=your-bucket-name
GCLOUD_KEY_FILENAME=./path/to/service-account.json