# Configuration pour les workspaces
workspaces=true
workspace-resolver-node-modules=true
shamefully-hoist=true
strict-peer-dependencies=false
# Forcer l'installation des dépendances peer
legacy-peer-deps=true
# Utiliser le registre npm officiel
registry=https://registry.npmjs.org/
# Toujours utiliser la version exacte
save-exact=true
# Désactiver le package-lock.json car nous utilisons pnpm
package-lock=false
# Ignorer les scripts postinstall pour éviter les problèmes
ignore-scripts=true
# Forcer la résolution des dépendances
prefer-offline=true
# Désactiver le cache pour éviter les problèmes de cache
cache-min=9999999
# Désactiver les fonds de démarrage
fund=false
# Désactiver les mises à jour automatiques
update-notifier=false
